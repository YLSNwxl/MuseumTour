<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ylsn.myapplication.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">

    <EditText
        android:id="@+id/account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="请输入手机号码"
        android:inputType="textPersonName"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/pass0"
        app:layout_constraintBaseline_toBaselineOf="@+id/account0"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/pass0" />

    <EditText
        android:id="@+id/pass0"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="63dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/account"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/pass" />

    <TextView
        android:id="@+id/topic"
        android:layout_width="235dp"
        android:layout_height="56dp"
        android:text="博物馆导览系统"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="30dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="98dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/login"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:text="登录"
        android:onClick="onClick"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/sig"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintRight_toRightOf="@+id/pass0"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@+id/pass"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="42dp"
        app:layout_constraintLeft_toLeftOf="@+id/pass" />

    <TextView
        android:id="@+id/found"
        android:layout_width="82dp"
        android:layout_height="39dp"
        android:text="找回密码"
        android:textSize="20dp"
        android:clickable="true"
        android:onClick="onClick"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="47dp"
        app:layout_constraintRight_toLeftOf="@+id/sig"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="164dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="163dp"
        app:layout_constraintLeft_toLeftOf="@+id/pass"
        app:layout_constraintTop_toTopOf="@+id/pass0" />

    <TextView
        android:id="@+id/sig"
        android:layout_width="83dp"
        android:layout_height="35dp"
        android:clickable="true"
        android:onClick="onClick"
        android:text="注册"
        android:textSize="20dp"
        android:layout_marginEnd="78dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/found"
        tools:layout_constraintBaseline_creator="1" />

    <TextView
        android:id="@+id/pass"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:text="密码"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"

        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/pass0"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/account0" />

    <TextView
        android:id="@+id/account0"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:text="账号"
        android:textSize="20dp"

        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginStart="73dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="71dp"
        app:layout_constraintTop_toBottomOf="@+id/topic"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
